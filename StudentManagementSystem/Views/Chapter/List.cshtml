@model IList<ChapterViewModel>
@if (TempData["info"] != null)
{
    @if (TempData["info"].ToString().Contains("delete"))
    {
        <div class="alert alert-danger" role="alert">
            @TempData["info"]
        </div>
    }
    else
    {
        <div class="alert alert-success" role="alert">
            @TempData["info"]
        </div>
    }
}
<div class="container">
    <div class="row">

        <h1 class="h4 mb-3">Chapter List</h1>
        <div class="col-md-12">
            <div class="table-responsive">
                <table id="chapterTable" class="table table-bordred table-striped">

                    <thead>
                        <th>ID</th>
                    <th>ChapterName</th>
                    <th>Description</th>
                    <th>Batch</th>
                    <th>Book</th>
                    <th>Video</th>
                        @if (User.IsInRole("Admin"))
                        {
                            <th>Edit</th>
                            <th>Delete</th>
                        }
                    </thead>
                    <tbody>
                        @{
                            var index = 1;
                        }
                        @foreach(var list in Model)
                        {
                            
                            <tr>
                                <td>@index</td>
                                <td>@list.Name</td>
                                <td>@list.Description</td>
                                <td>@list.BatchId</td>
                                <td>
                                    <a href="/assignment/DownloadFile?filePath=@list.BookId">
                                        <i class="fa-solid fa-download fa-xl"></i>
                                    </a>
                                </td>
                                <td>
                                    <video width="220" height="140" controls>
                                        <source src="@list.VideoId" type="video/mp4">
                                        Your browser does not support the video tag.
                                    </video>
                                </td>
                                @if (User.IsInRole("Admin"))
                                {
                                    <td><p data-placement="top" data-toggle="tooltip" title="Edit"><a class="btn btn-primary btn-xs" data-title="Edit" href="/chapter/edit?Id=@list.Id"><span class="glyphicon glyphicon-pencil"></span></a></p></td>
                                    <td>
                                        <p data-placement="top" data-toggle="tooltip" title="Delete">
                                            <a class="btn btn-danger btn-xs" data-title="Delete" href="/chapter/delete?Id=@list.Id" onclick="return confirm('Are you sure to delete the record?')">Delete</a>
                                        </p>
                                    </td>
                                    index++;
                                }
                            </tr>
                        }


                    </tbody>

                </table>

            </div>

        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#chapterTable").DataTable();
    });
</script>


