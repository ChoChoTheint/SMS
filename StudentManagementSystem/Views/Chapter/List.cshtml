<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script src="http://getbootstrap.com/dist/js/bootstrap.min.js"></script>

@model IList<ChapterViewModel>
@if (TempData["info"] != null)
{
    @if (TempData["info"].ToString().Contains("delete"))
    {
        <div class="alert alert-danger mt-3" role="alert">
            @TempData["info"]
        </div>
    }
    else
    {
        <div class="alert alert-success mt-3" role="alert">
            @TempData["info"]
        </div>
    }
}
<div class="container">
    <div class="row">

        <h1 class="h4 mb-3">Chapter List</h1>
        <div class="col-md-12">
            <div class="table-responsive">
                <table id="chapterTable" class="table table-bordred table-striped">

                    <thead>
                        <th>ID</th>
                    <th>ChapterName</th>
                    <th>Description</th>
                    <th>Batch</th>
                    <th>Book</th>
                    <th>Video</th>
                        @if (User.IsInRole("Admin"))
                        {
                            <th>Action</th>
                        }
                    </thead>
                    <tbody>
                        @{
                            var index = 1;
                        }
                        @foreach(var list in Model)
                        {
                            
                            <tr>
                                <td>@index</td>
                                <td>@list.Name</td>
                                <td>@list.Description</td>
                                <td>@list.BatchId</td>
                                <td>
                                    <a href="/assignment/DownloadFile?filePath=@list.BookId">
                                        <i class="fa-solid fa-download fa-xl"></i>
                                    </a>
                                </td>
                                <td>
                                    <video controls>
                                        <source src="/videos/J.Tajor - Like I Do (Official Music Video).mp4_44a1c042-3964-45e5-aef8-9639f889e391" type="video/mp4">
                                        Your browser does not support the video tag.
                                    </video>
                                </td>
                                @if (User.IsInRole("Admin"))
                                {
                                    <td class="dropdown">
                                        <button class="btn btn-white dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">Action</button>
                                        <ul class="dropdown-menu">
                                            <li class="dropdown-item">
                                                <a class="btn btn-primary btn-xs" data-title="Edit" href="/chapter/edit?Id=@list.Id"><span class="glyphicon glyphicon-pencil"></span></a>
                                            </li>
                                            <li class="dropdown-item">
                                                <a class="btn btn-danger btn-xs" data-title="Delete" data-bs-toggle="offcanvas" data-bs-target="#delete"><span class="glyphicon glyphicon-trash"></span></a>
                                            </li>
                                        </ul>
                                    </td>
                                        <div class="offcanvas offcanvas-top mx-auto h-50" tabindex="-1" id="delete" aria-labelledby="offcanvasExampleLabel" style="width: 500px;">
                                            <div class="offcanvas-header">
                                                <h5 class="h2 text-warning offcanvas-title" id="offcanvasExampleLabel">Attention</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                                            </div>
                                            <div class="offcanvas-body">
                                                <p class="alert text-danger">Are You Sure Want To Delete The Data?</p>
                                                <div class="offcanvasbottom ">
                                                    <a asp-controller="Chapter" asp-action="Delete" asp-route-id="@list.Id" class="btn btn-danger w-100">Yes</a>
                                                    <a type="button" class="btn btn-secondary w-100 my-3" data-bs-dismiss="offcanvas" aria-label="Close">No</a>
                                                </div>
                                            </div>
                                        </div>
                                }
                            </tr>
                            index++;
                        }


                    </tbody>

                </table>

            </div>

        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#chapterTable").DataTable();
    });
</script>


