@model StudentManagementSystem.Models.ViewModels.BookViewModel

<div class="container w-50 mx-auto my-3 p-5 border-start border-end border-bottom rounded-start rounded-end shadow-sm" style="border-top: 12px solid #699BF7">
    <div class="d-flex justify-content-center align-items-center mb-4">
        <div class="me-3">
            <i class="fa-solid fa-book-open fa-2xl" style="color: #699BF7"></i>
        </div>
        <div class="text-center">
            <span class="mate-sc text-uppercase fw-bold">Leadership</span>
            <h1 class="h5 brand-space">Excellence</h1>
        </div>
    </div>
    <h1 class="h4 mb-3 text-center">To Edit Book</h1>
    <form asp-controller="Book" asp-action="Update" method="post" enctype="multipart/form-data">
        <input asp-for="Id" hidden />
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" class="form-control"  />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <input asp-for="Description" class="form-control"/>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="File" class="form-label">Book</label>
            <input type="file" asp-for="File" class="form-control" />
            <input asp-for="URL" value="URL" hidden />
            <span asp-validation-for="File" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="CourseId" class="form-label">Course</label>
            <select asp-for="CourseId" class="form-select">
                <option value="">---choose option---</option>
                @foreach (var course in ViewBag.Course)
                {
                    if(@course.Id == Model.CourseId)
                    {

                        <option value="@course.Id" selected>@course.Name</option>
                    }
                }
            </select>
            <span asp-validation-for="CourseId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="BatchId" class="form-label">Batch</label>
            <select asp-for="BatchId" class="form-select">
                <option value="">---choose option---</option>
                @foreach (var batch in ViewBag.Batch)
                {
                    if(@batch.Id == Model.BatchId)
                    {

                        <option value="@batch.Id" selected>@batch.Name</option>
                    }
                }
            </select>
            <span asp-validation-for="BatchId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <button class="btn btn-primary text-white" style="border-radius: 10px 0 10px 0;">Update</button>
            <button class="btn btn-secondary text-white" style="border-radius: 10px 0 10px 0;" type="reset">Cancel</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}