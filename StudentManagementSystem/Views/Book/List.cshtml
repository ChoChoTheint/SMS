@model IList<BookViewModel>
@if (TempData["info"] != null)
{
    @if (TempData["info"].ToString().Contains("delete"))
    {
        <div class="alert alert-danger" role="alert">
            @TempData["info"]
        </div>
    }
    else
    {
        <div class="alert alert-success" role="alert">
            @TempData["info"]
        </div>
    }
}
<div class="container">
    <div class="row">

        <h1 class="h4 mb-3">Book List</h1>
        <div class="col-md-12">
            <div class="table-responsive">
                <table id="bookTable" class="table table-bordred table-striped">

                    <thead>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Book</th>
                    <th>Course</th>
                    <th>Batch</th>
                        @if (User.IsInRole("Admin"))
                        {
                            <th>Edit</th>
                            <th>Delete</th>
                        }
                    </thead>
                    <tbody>
                        @{
                            var index = 1;
                        }
                        @foreach(var list in Model)
                        {

                            <tr>
                                <td>@list.Name</td>
                                <td>@list.Description</td>
                                <td>
                                    <a href="/book/DownloadFile?filePath=@list.URL">
                                        <i class="fa-solid fa-download fa-xl"></i>
                                    </a>
                                </td>
                                <td>@list.CourseId</td>
                                <td>@list.CourseId</td>
                                @if (User.IsInRole("Admin"))
                                {
                                    <td><p data-placement="top" data-toggle="tooltip" title="Edit"><a class="btn btn-primary btn-xs" data-title="Edit" href="/book/edit?Id=@list.Id"><span class="glyphicon glyphicon-pencil"></span></a></p></td>
                                    <td>
                                        <p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" data-title="Delete" data-bs-toggle="offcanvas" data-bs-target="#delete"><span class="glyphicon glyphicon-trash"></span></button></p>

                                        <div class="offcanvas offcanvas-top mx-auto h-50" tabindex="-1" id="delete" aria-labelledby="offcanvasExampleLabel" style="width: 500px;">
                                            <div class="offcanvas-header">
                                                <h5 class="h2 text-warning offcanvas-title" id="offcanvasExampleLabel">Attention</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                                            </div>
                                            <p class="alert text-danger">Are You Sure Want To Delete The Data?</p>
                                            <div class="offcanvasbottom ">
                                                <a asp-controller="Book" asp-action="Delete" asp-route-id="@list.Id" class="btn btn-danger w-100">Yes</a>
                                                <button type="button" class="btn btn-secondary w-100 my-3" data-bs-dismiss="offcanvas" aria-label="Close">No</button>
                                            </div>
                                        </div>
                                    </td>
                                }
                            </tr>
                            index++;
                        }


                    </tbody>

                </table>

            </div>

        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
        $("#bookTable").DataTable();
    });
</script>

