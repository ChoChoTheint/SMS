<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script src="http://getbootstrap.com/dist/js/bootstrap.min.js"></script>
@model IList<CourseViewModel>
@if (TempData["info"] != null)
{
    @if (TempData["info"].ToString().Contains("delete"))
    {
        <div class="alert alert-danger mt-3" role="alert">
            @TempData["info"]
        </div>
    }
    else
    {
        <div class="alert alert-success mt-3" role="alert">
            @TempData["info"]
        </div>
    }
}
    
    <div class="container">

        @if (User.IsInRole("Admin"))
        {
            
            <div class="row">

                <h1 class="h4 mb-3">Course List</h1>
                <div class="col-md-12">
                    <div class="table-responsive">
                        <table id="courseTable" class="table table-bordred table-striped">

                            <thead>
                            <th>Course Name</th>
                            <th>Description</th>
                                @if (User.IsInRole("Admin"))
                                {
                                    <th>Action</th>
                                    <th>Details</th>
                                }
                            </thead>
                            <tbody>
                                @{
                                    var index = 1;
                                }
                                @foreach(var list in Model)
                                {
                            
                                    <tr>
                                        <td>@list.Name</td>
                                        <td>@list.Description</td>
                                        
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <td class="dropdown">
                                                <button class="btn btn-white dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">Action</button>
                                                <ul class="dropdown-menu">
                                                <li class="dropdown-item" data-placement="top" data-toggle="tooltip" title="Edit">
                                                        <a class="btn btn-primary btn-xs" data-title="Edit" href="/course/edit?Id=@list.Id"><span class="glyphicon glyphicon-pencil"></span></a>
                                                </li>
                                                <li class="dropdown-item" class="btn btn-danger btn-xs" data-title="Delete">
                                                        <a class="btn btn-danger btn-xs" data-title="Delete" data-bs-toggle="offcanvas" data-bs-target="#delete"><span class="glyphicon glyphicon-trash"></span></a>
                                                    </li>
                                                </ul>
                                            </td>

                                            
                                        <td>
                                            <a asp-controller="Batch" asp-action="Detail" asp-route-id="@list.Id" class="link-underline-primary link-opacity-100-hover">Details</a>
                                        </td>
                                        }
                                    </tr>
                                    index++;
                                }
                            </tbody>

                        </table>

                    </div>

                </div>
            </div>
        }
    </div>



<script>
    $(document).ready(function () {
        $("#courseTable").DataTable();
    });
</script>

