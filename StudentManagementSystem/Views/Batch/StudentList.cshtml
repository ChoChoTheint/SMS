@using StudentManagementSystem.Models.ViewModels
@model IList<BatchViewModel>
@if (TempData["info"] != null)
{
    @if (TempData["info"].ToString().Contains("delete"))
    {
        <div class="alert alert-danger mt-3" role="alert">
            @TempData["info"]
        </div>
    }
    else
    {
        <div class="alert alert-success mt-3" role="alert">
            @TempData["info"]
        </div>
    }
}
<div class="container">
    

    @if (User.IsInRole("Admin")||User.Identity.IsAuthenticated)
    {
        
        <div class="row">

            <h1 class="h4 mb-3">Batch List</h1>
            <div class="">
                <div class="table-responsive">
                    <table id="batchTable" class="table table-bordred table-striped">

                        <thead>
                            <tr>

                                <td>ID</td>
                                <th>Batch Name</th>
                                <th>Course</th>
                                <th>Opening Date</th>
                                <th>Duration In Hour</th>
                                <th>Duration In Month</th>
                                @if (User.IsInRole("Admin"))
                                {
                                    <th>Action</th>
                                }
                                    <th>Detail</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var index = 1;
                            }
                            @foreach(var list in Model)
                            {
                            
                                <tr>
                                    <td>@index</td>
                                    <td>@list.Name</td>
                                    <td>@list.CourseId</td>
                                    <td>@list.OpeningDate.ToString("dd-MM-yyyy")</td>
                                    <td>@list.DurationInHour</td>
                                    <td>@list.DurationInMonth</td>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <td class="dropdown">
                                            <button class="btn btn-white dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">Action</button>
                                            <ul class="dropdown-menu">
                                                <li class="dropdown-item">
                                                    <a class="btn btn-primary btn-xs" data-title="Edit" href="/batch/edit?Id=@list.Id"><span class="glyphicon glyphicon-pencil"></span></a>
                                                </li>
                                                <li class="dropdown-item">
                                                    <a class="btn btn-danger btn-xs" href="/batch/delete?Id=@list.Id" data-title="Delete" data-bs-toggle="offcanvas" data-bs-target="#delete" onclick="return confirm('Are you sure want to delete the record?')"><span class="glyphicon glyphicon-trash"></span></a>
                                                </li>
                                            </ul>
                                        </td>
                                    }
                                        <td>
                                            <a asp-controller="Chapter" asp-action="Detail" asp-route-id="@list.Id" class="link-underline-primary link-underline-opacity-100-hover">Details>></a>
                                        </td>
                                </tr>
                                index++;
                            }


                        </tbody>

                    </table>

                </div>

            </div>
        </div>
    }
</div>


<script>
    $(document).ready(function (){
        $("#batchTable").DataTable();
    })
</script>

