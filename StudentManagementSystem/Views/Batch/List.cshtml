@using StudentManagementSystem.Models.ViewModels
@model IList<BatchViewModel>
@if (TempData["info"] != null)
{
    @if (TempData["info"].ToString().Contains("delete"))
    {
        <div class="alert alert-danger mt-3" role="alert">
            @TempData["info"]
        </div>
    }
    else
    {
        <div class="alert alert-success mt-3" role="alert">
            @TempData["info"]
        </div>
    }
}
<div class="container">
    

    @if (User.IsInRole("Admin"))
    {
        
        <div class="row">

            <h1 class="h4 mb-3">Batch List</h1>
            <div class="">
                <div class="table-responsive">
                    <table id="batchTable" class="table table-bordred table-striped">

                        <thead>
                            <tr>

                                <td>ID</td>
                                <th>Batch Name</th>
                                <th>Course</th>
                                <th>Opening Date</th>
                                <th>Duration In Hour</th>
                                <th>Duration In Month</th>
                                @if (User.IsInRole("Admin"))
                                {
                                    <th>Action</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var index = 1;
                            }
                            @foreach(var list in Model)
                            {
                            
                                <tr>
                                    <td>@index</td>
                                    <td>@list.Name</td>
                                    <td>@list.CourseId</td>
                                    <td>@list.OpeningDate.ToString("dd-MM-yyyy")</td>
                                    <td>@list.DurationInHour</td>
                                    <td>@list.DurationInMonth</td>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <td class="dropdown">
                                            <button class="btn btn-white dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">Action</button>
                                            <ul class="dropdown-menu">
                                                <li class="dropdown-item">
                                                    <a class="btn btn-primary btn-xs" data-title="Edit" href="/batch/edit?Id=@list.Id"><span class="glyphicon glyphicon-pencil"></span></a>
                                                </li>
                                                <li class="dropdown-item">
                                                    <a class="btn btn-danger btn-xs" data-title="Delete" data-bs-toggle="offcanvas" data-bs-target="#delete"><span class="glyphicon glyphicon-trash"></span></a>
                                                </li>
                                            </ul>
                                        </td>

                                        <div class="offcanvas offcanvas-top mx-auto h-50" tabindex="-1" id="delete" aria-labelledby="offcanvasExampleLabel" style="width: 500px;">
                                            <div class="offcanvas-header">
                                                <h5 class="h2 text-warning offcanvas-title" id="offcanvasExampleLabel">Attention</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                                            </div>
                                            <div class="offcanvas-body">
                                                <p class="alert text-danger">Are You Sure Want To Delete The Data?</p>
                                                <div class="offcanvasbottom ">
                                                    <a asp-controller="Batch" asp-action="Delete" asp-route-id="@list.Id" class="btn btn-danger w-100">Yes</a>
                                                    <a type="button" class="btn btn-secondary w-100 my-3" data-bs-dismiss="offcanvas" aria-label="Close">No</a>
                                                </div>
                                            </div>
                                        </div>
                                        <td>
                                            <a asp-controller="" asp-action="Detail" asp-route-id="@list.Id" class="link-underline-primary link-opacity-100-hover">Details</a>
                                        </td>
                                    }
                                </tr>
                                index++;
                            }


                        </tbody>

                    </table>

                </div>

            </div>
        </div>
    }
</div>


<script>
    $(document).ready(function (){
        $("#batchTable").DataTable();
    })
</script>

