    @if (User.IsInRole("Admin") && User.Identity.IsAuthenticated)
    {
        Layout = "_LayoutAdmin";
    }
    else if (User.IsInRole("Teacher") && User.Identity.IsAuthenticated)
    {
        Layout = "_LayoutTeacher";
    }
    else if (User.Identity.IsAuthenticated)
    {
        Layout = "_LayoutStudent";
}
else
{
    Layout = "_Layout";
}
