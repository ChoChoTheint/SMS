@model StudentManagementSystem.Models.ViewModels.AssignmentViewModel

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/home/index">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Entry</li>
    </ol>
</nav>
<div class="container w-50 mx-auto mt-5 p-5 border-start border-end border-bottom rounded-start rounded-end shadow-sm" style="border-top: 12px solid #699BF7">
    <div class="d-flex justify-content-center align-items-center mb-4">
        <div class="me-3">
            <i class="fa-solid fa-book-open fa-2xl" style="color: #699BF7"></i>
        </div>
        <div class="text-center">
            <span class="mate-sc text-uppercase fw-bold">Leadership</span>
            <h1 class="h5 brand-space">Excellence</h1>
        </div>
    </div>
    <h1 class="h4 mb-3 text-center">Assignment Entry Form</h1>
    <form asp-controller="Assignment" asp-action="Entry" method="post" enctype="multipart/form-data">
        <input asp-for="Id" value="@ViewBag.Id" hidden/>
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" class="form-control" placeholder="Enter Name..." />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <input asp-for="Description" class="form-control" placeholder="Enter Description..." />
            <span asp-validation-for="Description" class="text-sm text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="File" class="form-label">File</label>
            <input type="file" asp-for="File" class="form-control" placeholder="Choose File..."/>
            <input asp-for="URL" value="URL" hidden />
            <span asp-validation-for="File" class="text-sm text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="CourseId" class="form-label">Course</label>
            <select asp-for="CourseId" class="form-select">
                <option value="" selected>---select option---</option>
                @if (ViewBag.Course != null)
                {
                    foreach (var course in ViewBag.Course)
                    {
                        <option value="@course.Id">@course.Name</option>
                    }
                }
            </select>
            <span asp-validation-for="CourseId" class="text-sm text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="BatchId" class="form-label">Batch</label>
            <select asp-for="BatchId" class="form-select">
                <option value="" selected>---choose option---</option>
                @if (ViewBag.Batch != null)
                {
                    foreach (var batch in ViewBag.Batch)
                    {
                        <option value="@batch.Id">@batch.Name</option>
                    }
                }
            </select>
            <span asp-validation-for="BatchId" class="text-sm text-danger"></span>
        </div>

       
        <div class="mb-3">
            <button class="btn btn-primary text-white" style="border-radius: 10px 0 10px 0;">Submit</button>
            <a href="/assignment/cancle" class="btn btn-danger" style="border-radius: 10px 0 10px 0;">
                Cancel
            </a>
        </div>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}