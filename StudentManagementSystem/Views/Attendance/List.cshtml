@model IList<AttendanceViewModel>
@if (TempData["info"] != null)
{
    @if (TempData["info"].ToString().Contains("delete"))
    {
        <div class="alert alert-danger mt-3" role="alert">
            @TempData["info"]
        </div>
    }
    else
    {
        <div class="alert alert-success mt-3" role="alert">
            @TempData["info"]
        </div>
    }
}
<div class="container">
    @if (User.IsInRole("Admin") || User.IsInRole("Teacher") || User.Identity.IsAuthenticated)
    {
        <h1 class="h3 fw-bold">Attendance: </h1>
        <div class="row my-3 border-bottom">
            @foreach(var detail in Model)
            {
            
                <div class="col-lg-6 pb-5">
                    <div class="card">
                        <div class="card-body">
                            <h1 class="h3 pb-2 border-bottom border-danger"><span class="fw-bold">Name: </span>@detail.StudentId</h1>

                            <div class=" gap-4 border-bottom border-danger pb-3">
                                <p class="card-text"><span class="fw-bold">Attendance Date: </span>@detail.AttendanceDate.ToString("dd-MM-yyyy")</p>
                                <p class="card-text"><span class="fw-bold">In Time: </span>@detail.InTime.ToString("hh-mm-ss")</p>
                                <p class="card-text"><span class="fw-bold">Out Time: </span>@detail.OutTime.ToString("hh-mm-ss")</p>
                                <p class="card-text"><span class="fw-bold">Is Leave: </span>@detail.IsLeave</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
       
        </div>
    }
    
    @if (User.IsInRole("Admin")||User.Identity.IsAuthenticated)
    {
        
        <div class="row ">

            <h1 class="h4 mb-3">Attendance List</h1>
                <div class="table-responsive">
                    <table id="attendanceTable" class="table table-bordred table-striped">

                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>StudentName</th>
                                <th>AttendanceDate</th>
                                <th>InTime</th>
                                <th>OutTime</th>
                                <th>IsLeave</th>
                                
                                @if (User.IsInRole("Admin"))
                                {
                                    <th>Action</th>
                                    
                                }
                            </tr>
                        </thead>
                        <tbody>
                            
                            @{
                                var index = 1;
                            }
                            @foreach(var list in Model)
                            {
                                <tr>
                                    @if (!User.IsInRole("Teacher"))
                                    {

                                    <td>@index</td>
                                    <td>@list.StudentId</td>
                                    <td>@list.AttendanceDate.ToString("dd-MM-yyyy")</td>
                                    <td>@list.InTime.ToString("hh:mm:ss tt")</td>
                                    <td>@list.OutTime.ToString("hh:mm:ss tt")</td>
                                    <td>@list.IsLeave</td>
                                    }
                                    @if (!User.IsInRole("Teacher"))
                                    {
                                        <td class="dropdown">
                                            <button class="btn btn-white dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">Action</button>
                                            <ul class="dropdown-menu">
                                                <li class="dropdown-item" data-placement="top" data-toggle="tooltip" title="Edit">
                                                    <a class="btn btn-primary btn-xs" data-title="Edit" href="/attendance/edit?Id=@list.Id"><span class="glyphicon glyphicon-pencil"></span></a>
                                                </li>
                                                 @if (User.IsInRole("Admin"))
                                                 {
                                                    <li class="dropdown-item" data-placement="top" data-toggle="tooltip" title="Delete">
                                                        <a class="btn btn-danger btn-xs" data-title="Delete" data-bs-toggle="offcanvas" data-bs-target="#delete"><span class="glyphicon glyphicon-trash"></span></a>
                                                    </li>
                                                 }
                                            </ul>
                                        </td>
                                    
                                    }
                                </tr>
                                index++;
                            }


                        </tbody>

                    </table>

               

                </div>
        </div>
    }
    
</div>



<script>
    $(document).ready(function (){
        $("#attendanceTable").DataTable();
    })
</script>
