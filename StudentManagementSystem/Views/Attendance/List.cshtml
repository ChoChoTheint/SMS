@model IList<AttendanceViewModel>
@if (TempData["info"] != null)
{
    @if (TempData["info"].ToString().Contains("delete"))
    {
        <div class="alert alert-danger" role="alert">
            @TempData["info"]
        </div>
    }
    else
    {
        <div class="alert alert-success" role="alert">
            @TempData["info"]
        </div>
    }
}
<div class="">
    <div class="">

        <h1 class="h4 mb-3">Attendance List</h1>
            <div class="table-responsive">
                <table id="attendanceTable" class="table table-bordred table-striped">

                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>StudentName</th>
                            <th>AttendanceDate</th>
                            <th>InTime</th>
                            <th>OutTime</th>
                            <th>IsLeave</th>
                            @if (User.IsInRole("Admin"))
                            {
                                <th>Edit</th>
                                <th>Delete</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @if (!User.IsInRole("Admin") && User.IsInRole("Teacher"))
                        {
                            <span class="text-info" id="attendanceInfo">please today's attendance is required!</span>
                        }
                        @{
                            var index = 1;
                        }
                        @foreach(var list in Model)
                        {
                            <tr>
                                <td>@index</td>
                                <td>@list.StudentId</td>
                                <td>@list.AttendanceDate.ToString("dd-MM-yyyy")</td>
                                <td>@list.InTime.ToString("hh-mm-ss")</td>
                                <td>@list.OutTime.ToString("hh-mm-ss")</td>
                                <td>@list.IsLeave</td>
                                @if (User.IsInRole("Admin"))
                                {
                                    <td><p data-placement="top" data-toggle="tooltip" title="Edit"><a class="btn btn-primary btn-xs" data-title="Edit" href="/attendance/edit?Id=@list.Id"><span class="glyphicon glyphicon-pencil"></span></a></p></td>
                                    <td>
                                        <p data-placement="top" data-toggle="tooltip" title="Delete">
                                            <a class="btn btn-danger btn-xs" data-title="Delete" href="/attendance/delete?Id=@list.Id" onclick="return confirm('Are you sure to delete the record?')">Delete</a>
                                        </p>
                                    </td>
                                }
                            </tr>
                            index++;
                        }


                    </tbody>

                </table>

               

            </div>
    </div>
</div>



<script>
    $(document).ready(function (){
        $("#attendanceTable").DataTable();
    })
</script>
