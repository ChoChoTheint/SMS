@using StudentManagementSystem.Models.ViewModels;
@model IList<AdminViewModel>
@if (TempData["info"] != null)
{
    @if (TempData["info"].ToString().Contains("delete"))
    {
        <div class="alert alert-danger" role="alert">
            @TempData["info"]
        </div>
    }
    else
    {
        <div class="alert alert-success" role="alert">
            @TempData["info"]
        </div>
    }
}



@if (User.IsInRole("Admin"))
{
    <h1 class="h4 mb-3">Admin List</h1>
    <table id="adminTable" class="table table-responsive table-bordred table-striped">

                    <thead>
                        <tr>
                            <th scope="col">Sr.</th>
                            <th scope="col">Name</th>
                            <th>Email</th>
                            <th>Address</th>
                            <th>Phone</th>
                            <th>DOB</th>
                            <th>NRC</th>
                            <th>Gender</th>
                            <th>Father Name</th>
                            @if(User.IsInRole("Admin"))
                            {
                                <th>Action</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int index = 1;
                        }

                        @foreach (var list in Model)
                        {
                            <tr>
                                <td>@index</td>
                                <td>@list.Name</td>
                                <td>@list.Email</td>
                                <td>@list.Address</td>
                                <td>@list.Phone</td>
                                <td>@list.DOB.ToString("dd-MM-yyyy")</td>
                                <td>@list.NRC</td>
                                <td>@list.Gender</td>
                                <td>@list.FatherName</td>
                                @if (User.IsInRole("Admin"))
                                {
                                    <td>
                                        <a href="/admin/edit?Id=@list.Id" role="button" class="btn btn-primary btn-xs" data-title="Edit"><span class="glyphicon glyphicon-pencil"></span></a>
                                    </td>
                                    <td>
                                        <p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" data-title="Delete" data-bs-toggle="offcanvas" data-bs-target="#delete"><span class="glyphicon glyphicon-trash"></span></button></p>

                                        <div class="offcanvas offcanvas-top mx-auto h-50" tabindex="-1" id="delete" aria-labelledby="offcanvasExampleLabel" style="width: 500px;">
                                            <div class="offcanvas-header">
                                                <h5 class="h3 text-warning offcanvas-title" id="offcanvasExampleLabel">Attention</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                                            </div>
                                            <p class="alert text-danger">Are You Sure Want To Delete The Data?</p>
                                            <div class="offcanvasbottom ">
                                                <a href="/admin/delete?Id=@list.Id" class="btn btn-danger w-100">Yes</a>
                                                <button type="button" class="btn btn-secondary w-100 my-3" data-bs-dismiss="offcanvas" aria-label="Close">No</button>
                                            </div>
                                        </div>
                                        
                                    </td>
                                }
                            </tr>
                            index++;
                        }
                       

                    </tbody>

                </table>
}


              

<script>
    $(document).ready(function () {
        $('#adminTable').DataTable();
    });
</script>