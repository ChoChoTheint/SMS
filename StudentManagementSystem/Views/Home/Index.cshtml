@{
    ViewData["Title"] = "Home Page";
}


@using StudentManagementSystem.Models.ViewModels;
@model IList<AttendanceViewModel>
@if (!User.Identity.IsAuthenticated)
{
    <div class="text-center my-5">
        <h1 class="display-4">Welcome</h1>
        <h1 class="display-6">To</h1>
        <h1 class="display-4">School Management System</h1>
    </div>

    <div class="d-flex justify-content-center gap-5">
        <a class="btn btn-primary btn-lg" asp-area="Identity" asp-page="/Account/Login">Login</a>
        <a class="btn btn-secondary btn-lg" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </div>
}
else if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <div class="row">
        

            <div class="container">
                <div class="d-lg-flex d-md-inline g-3 justify-content-evenly">
                    <a href="/video/entry" class="link-dark link-underline link-underline-opacity-0">
                        <div class="box rounded pt-5 shadow border">
                            <div class="box-item border rounded  mx-auto">
                                <i class="fa-solid fa-clapperboard fa-lg ms-1 box-item_icon"></i>
                            </div>
                        </div>
                        <h1 class="h5 text-center">Add Video</h1>
                    </a>
                    <a href="/book/entry" class="link-dark link-underline link-underline-opacity-0">
                        <div class="box rounded pt-5 shadow border">
                            <div class="box-item border rounded  mx-auto">
                                <i class="fa-solid fa-book fa-lg box-item_icon ms-1"></i>
                            </div>
                        </div>
                        <h1 class="h5 text-center">Add Book</h1>
                    </a>
                    <a href="/exam/entry" class="link-dark link-underline link-underline-opacity-0">
                        <div class="box rounded pt-5 shadow border">
                            <div class="box-item border rounded  mx-auto">
                                <i class="fa-solid fa-person-circle-question fa-lg box-item_icon"></i>
                            </div>
                        </div>
                        <h1 class="h5 text-center">Add Exam</h1>
                    </a>
                </div>

                <div class="d-lg-flex d-md-inline g-3 justify-content-evenly mt-5">
                    <a href="/attendance/entry" class="link-dark link-underline link-underline-opacity-0">
                        <div class="box rounded pt-5 shadow border">
                            <div class="box-item border rounded  mx-auto">
                                <i class="fa-solid fa-users-line fa-lg box-item_icon"></i>
                            </div>
                        </div>
                        <h1 class="h5 text-center">Add Attendance</h1>
                    </a>
                    <a href="/examresult/entry" class="link-dark link-underline link-underline-opacity-0">
                        <div class="box rounded pt-5 shadow border">
                            <div class="box-item border rounded  mx-auto">
                                <i class="fa-solid fa-square-poll-horizontal fa-lg box-item_icon ms-1"></i>
                            </div>
                        </div>
                        <h1 class="h5 text-center">Add Exam Result</h1>
                    </a>
                    <a href="/batch/entry" class="link-dark link-underline link-underline-opacity-0">
                        <div class="box rounded pt-5 shadow border">
                            <div class="box-item border rounded  mx-auto ">
                                <i class="fa-solid fa-calendar-days fa-lg ms-1 box-item_icon"></i>
                            </div>
                        </div>
                        <h1 class="h5 text-center">Add Batch</h1>
                    </a>
                </div>
                <div class="d-lg-flex d-md-inline g-3 justify-content-evenly mt-5">
                    <a href="/assignment/entry" class="link-dark link-underline link-underline-opacity-0">
                        <div class="box rounded pt-5 shadow border">
                            <div class="box-item border rounded  mx-auto">
                                <i class="fa-solid fa-square-poll-horizontal fa-lg box-item_icon ms-1"></i>
                            </div>
                        </div>
                        <h1 class="h5 text-center">Add Assignment</h1>
                    </a>
                    <a href="/course/entry" class="link-dark link-underline link-underline-opacity-0">
                        <div class="box rounded pt-5 shadow border">
                            <div class="box-item border rounded  mx-auto ">
                                <i class="fa-solid fa-calendar-days fa-lg ms-1 box-item_icon"></i>
                            </div>
                        </div>
                        <h1 class="h5 text-center">Add Course</h1>
                    </a>
                    <a href="/teachercourse/entry" class="link-dark link-underline link-underline-opacity-0">
                        <div class="box rounded pt-5 shadow border">
                            <div class="box-item border rounded  mx-auto ">
                                <i class="fa-solid fa-calendar-days fa-lg ms-1 box-item_icon"></i>
                            </div>
                        </div>
                        <h1 class="h5 text-center">Add Teacher Course</h1>
                    </a>
                </div>
            </div>
        </div>

    

}
else if (User.Identity.IsAuthenticated && User.IsInRole("Teacher"))
{
    // Layout = "_LayoutTeacher";

    <div class="container">
        <div class="row">

                <thead>
                    <tr>
                        <th>ID</th>
                        <th>StudentName</th>
                        <th>AttendanceDate</th>
                        <th>InTime</th>
                        <th>OutTime</th>
                        <th>IsLeave</th>
                        @if (User.IsInRole("Admin"))
                        {
                            <th>Edit</th>
                            <th>Delete</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    <span class="text-info">please today's attendance is required!</span>
                    @{
                        var index = 1;
                    }
                    @foreach (var list in Model)
                    {
                        
                                <tr>
                                    <td>@index</td>
                                    <td>@list.StudentId</td>
                                    <td>@list.AttendanceDate</td>
                                    <td>@list.InTime</td>
                                    <td>@list.OutTime</td>
                                    <td>@list.IsLeave</td>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <td><p data-placement="top" data-toggle="tooltip" title="Edit"><a class="btn btn-primary btn-xs" data-title="Edit" href="/attendance/edit?Id=@list.Id"><span class="glyphicon glyphicon-pencil"></span></a></p></td>
                                        <td>
                                            <p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" data-title="Delete" data-bs-toggle="offcanvas" data-bs-target="#delete"><span class="glyphicon glyphicon-trash"></span></button></p>

                                            <div class="offcanvas offcanvas-top mx-auto h-50" tabindex="-1" id="delete" aria-labelledby="offcanvasExampleLabel" style="width: 500px;">
                                                <div class="offcanvas-header">
                                                    <h5 class="h2 text-warning offcanvas-title" id="offcanvasExampleLabel">Attention</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                                                </div>
                                                <p class="alert text-danger">Are You Sure Want To Delete The Data?</p>
                                                <div class="offcanvasbottom ">
                                                    <a href="/attendance/delete?Id=@list.Id" class="btn btn-danger w-100">Yes</a>
                                                    <button type="button" class="btn btn-secondary w-100 my-3" data-bs-dismiss="offcanvas" aria-label="Close">No</button>
                                                </div>
                                            </div>
                                        </td>
                                    }
                                </tr>
                                index++;
                            }


                        </tbody>





        </div>
    </div>

   
    
}
else if(User.Identity.IsAuthenticated)
{
    
        <div class="row">
            <div class="container">
                <table id="attendanceTable" class="table table-striped table-dark">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>StudentName</th>
                            <th>AttendanceDate</th>
                            <th>InTime</th>
                            <th>OutTime</th>
                            <th>IsLeave</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>

                    <tbody>
                        <span class="text-info">please today's attendance is required!</span>
                        @{
                            var index = 1;
                        }
                        @foreach(var list in Model)
                        {
                            <tr>
                                <td>@index</td>
                                <td>@list.StudentId</td>
                                <td>@list.AttendanceDate</td>
                                <td>@list.InTime</td>
                                <td>@list.OutTime</td>
                                <td>@list.IsLeave</td>
                                @if (User.IsInRole("Admin"))
                                {
                                    <td><p data-placement="top" data-toggle="tooltip" title="Edit"><a class="btn btn-primary btn-xs" data-title="Edit" href="/attendance/edit?Id=@list.Id"><span class="glyphicon glyphicon-pencil"></span></a></p></td>
                                    <td>
                                        <p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" data-title="Delete" data-bs-toggle="offcanvas" data-bs-target="#delete"><span class="glyphicon glyphicon-trash"></span></button></p>

                                        <div class="offcanvas offcanvas-top mx-auto h-50" tabindex="-1" id="delete" aria-labelledby="offcanvasExampleLabel" style="width: 500px;">
                                            <div class="offcanvas-header">
                                                <h5 class="h2 text-warning offcanvas-title" id="offcanvasExampleLabel">Attention</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                                            </div>
                                            <p class="alert text-danger">Are You Sure Want To Delete The Data?</p>
                                            <div class="offcanvasbottom ">
                                                <a href="/attendance/delete?Id=@list.Id" class="btn btn-danger w-100">Yes</a>
                                                <button type="button" class="btn btn-secondary w-100 my-3" data-bs-dismiss="offcanvas" aria-label="Close">No</button>
                                            </div>
                                        </div>
                                    </td>
                                }
                            </tr>
                            index++;
                        }


                    </tbody> 
                </table>
            </div>
        </div>
    
    
}


<script>
    $(document).ready(function () {
        $("#attendanceTable").DataTable();
    })
</script>