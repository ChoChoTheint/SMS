@{
    ViewData["Title"] = "Home Page";
}


@using StudentManagementSystem.Models.ViewModels;
@model IList<AttendanceViewModel>
@if (!User.Identity.IsAuthenticated)
{
    <div class="text-center my-5">
        <h1 class="display-4">Welcome</h1>
        <h1 class="display-6">To</h1>
        <h1 class="display-4">School Management System</h1>
    </div>

    <div class="d-flex justify-content-center gap-5">
        <a class="btn btn-primary btn-lg" asp-area="Identity" asp-page="/Account/Login">Login</a>
        <a class="btn btn-secondary btn-lg" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </div>
}
else if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <div class="row pt-5">

            <div class="container">
                <div class="row">
                    <div class="col-lg-4 mb-3">
                        <h1 class="h3">Teachers</h1>
                        <div class="card">
                            <div class="card-title ms-2 mt-2">Teacher List</div>
                            <div class="card-body">
                                <p>In here, you can see all the teacher's details in this school</p>
                            </div>
                            <div class="card-footer">
                                <a asp-controller="TeacherCourse" asp-action="List" class="btn btn-primary float-end">Details</a>
                            </div>
                        </div>

                    </div>
                    <div class="col-lg-4 mb-3">
                        <h1 class="h3">Students</h1>
                        <div class="card">
                            <div class="card-title ms-2 mt-2">Student List</div>
                            <div class="card-body">
                                <p>In here, you can see all the student's details in this school</p>
                            </div>
                            <div class="card-footer">
                                <a asp-controller="Student" asp-action="List" class="btn btn-primary float-end">Details</a>
                            </div>
                        </div>

                    </div>
                    <div class="col-lg-4">
                        <canvas id="myTableChart" height="220"></canvas>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4">
                        <h1 class="h3">Courses</h1>
                        <div class="card">
                            <div class="card-title ms-2 mt-2">Course List</div>
                            <div class="card-body">
                                <p>In here, you can see all the course's details in each batches</p>
                            </div>
                            <div class="card-footer">
                                <a asp-controller="Course" asp-action="Detail" class="btn btn-primary float-end">Details</a>
                            </div>
                        </div>

                    </div>
                    <div class="col-lg-4">
                        <h1 class="h3">Batches</h1>
                        <div class="card">
                            <div class="card-title ms-2 mt-2">Batche List</div>
                            <div class="card-body">
                                <p>In here, you can see all the batche's details in this school</p>
                            </div>
                            <div class="card-footer">
                                <a asp-controller="Batch" asp-action="Detail" class="btn btn-primary float-end">Details</a>
                            </div>
                        </div>

                    </div>
                    <div class="col-lg-4">
                        <canvas id="myBubbleChart" height="220"></canvas>
                    </div>

                </div>
                
            
               
            </div>
    </div>

    

}
else if (User.Identity.IsAuthenticated && User.IsInRole("Teacher"))
{
    // Layout = "_LayoutTeacher";
    <h1 class="h4 mb-3">Attendance List</h1>
            <div class="col-md-12">
                <div class="table-responsive">
                    <table id="attendanceTable" class="table table-bordred table-striped">

                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>StudentName</th>
                                <th>AttendanceDate</th>
                                <th>InTime</th>
                                <th>OutTime</th>
                                <th>IsLeave</th>
                                @if (User.IsInRole("Admin"))
                                {
                                    <th>Edit</th>
                                    <th>Delete</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var index = 1;
                            }
                            @foreach(var list in Model)
                            {
                                <tr>
                                    <td>@index</td>
                                    <td>@list.StudentId</td>
                                    <td>@list.AttendanceDate</td>
                                    <td>@list.InTime</td>
                                    <td>@list.OutTime</td>
                                    <td>@list.IsLeave</td>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <td><p data-placement="top" data-toggle="tooltip" title="Edit"><a class="btn btn-primary btn-xs" data-title="Edit" href="/attendance/edit?Id=@list.Id"><span class="glyphicon glyphicon-pencil"></span></a></p></td>
                                        <td>
                                            <p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" data-title="Delete" data-bs-toggle="offcanvas" data-bs-target="#delete"><span class="glyphicon glyphicon-trash"></span></button></p>

                                            <div class="offcanvas offcanvas-top mx-auto h-50" tabindex="-1" id="delete" aria-labelledby="offcanvasExampleLabel" style="width: 500px;">
                                                <div class="offcanvas-header">
                                                    <h5 class="h2 text-warning offcanvas-title" id="offcanvasExampleLabel">Attention</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                                                </div>
                                                <p class="alert text-danger">Are You Sure Want To Delete The Data?</p>
                                                <div class="offcanvasbottom ">
                                                    <a href="/attendance/delete?Id=@list.Id" class="btn btn-danger w-100">Yes</a>
                                                    <button type="button" class="btn btn-secondary w-100 my-3" data-bs-dismiss="offcanvas" aria-label="Close">No</button>
                                                </div>
                                            </div>
                                        </td>
                                    }
                                </tr>
                                index++;
                            }


                        </tbody>


                    </table>


                </div>
            </div>

   
    
}
else if(User.Identity.IsAuthenticated)
{
    <h1 class="h4 mb-3">Attendance List</h1>
        <div class="row">
            <div class="container">
                <table id="attendanceTable" class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>StudentName</th>
                            <th>AttendanceDate</th>
                            <th>InTime</th>
                            <th>OutTime</th>
                            <th>IsLeave</th>
                        @if (User.IsInRole("Admin"))
                        {
                            <th>Edit</th>
                            <th>Delete</th>
                        }
                        </tr>
                    </thead>

                    <tbody>
                        <span class="text-warning fw-bold">please today's attendance is required!</span>
                        @{
                            var index = 1;
                        }
                        @foreach(var list in Model)
                        {
                            <tr>
                                <td>@index</td>
                                <td>@list.StudentId</td>
                                <td>@list.AttendanceDate</td>
                                <td>@list.InTime</td>
                                <td>@list.OutTime</td>
                                <td>@list.IsLeave</td>
                                @if (User.IsInRole("Admin"))
                                {
                                    <td><p data-placement="top" data-toggle="tooltip" title="Edit"><a class="btn btn-primary btn-xs" data-title="Edit" href="/attendance/edit?Id=@list.Id"><span class="glyphicon glyphicon-pencil"></span></a></p></td>
                                    <td>
                                        <p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" data-title="Delete" data-bs-toggle="offcanvas" data-bs-target="#delete"><span class="glyphicon glyphicon-trash"></span></button></p>

                                        <div class="offcanvas offcanvas-top mx-auto h-50" tabindex="-1" id="delete" aria-labelledby="offcanvasExampleLabel" style="width: 500px;">
                                            <div class="offcanvas-header">
                                                <h5 class="h2 text-warning offcanvas-title" id="offcanvasExampleLabel">Attention</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                                            </div>
                                            <p class="alert text-danger">Are You Sure Want To Delete The Data?</p>
                                            <div class="offcanvasbottom ">
                                                <a href="/attendance/delete?Id=@list.Id" class="btn btn-danger w-100">Yes</a>
                                                <button type="button" class="btn btn-secondary w-100 my-3" data-bs-dismiss="offcanvas" aria-label="Close">No</button>
                                            </div>
                                        </div>
                                    </td>
                                }
                            </tr>
                            index++;
                        }


                    </tbody> 
                </table>
            </div>
        </div>
    
    
}


<script>
    $(document).ready(function () {
        $("#attendanceTable").DataTable();
    })


    const tableCtx = document.getElementById('myTableChart').getContext('2d');
    const myTableChart = new Chart(tableCtx, {
        type: 'bar',
        data: {
            labels: ['Red', 'Blue', 'Yellow', 'Green', 'Purple', 'Orange'],
            datasets: [{
                label: 'My First Dataset',
                data: [65, 59, 80, 81, 56, 55, 40],
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(255, 159, 64, 0.2)',
                    'rgba(255, 205, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(201, 203, 207, 0.2)'
                ],
                borderColor: [
                    'rgb(255, 99, 132)',
                    'rgb(255, 159, 64)',
                    'rgb(255, 205, 86)',
                    'rgb(75, 192, 192)',
                    'rgb(54, 162, 235)',
                    'rgb(153, 102, 255)',
                    'rgb(201, 203, 207)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });


    
    const bubbleCtx = document.getElementById('myBubbleChart').getContext('2d');
    const myBubbleChart = new Chart(bubbleCtx, {
        type: 'bubble',
        data: {
            datasets: [{
                label: 'First Dataset',
                data: [{
                    x: 20,
                    y: 30,
                    r: 15
                }, {
                    x: 40,
                    y: 10,
                    r: 10
                }],
                backgroundColor: 'rgb(255, 99, 132)'
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>