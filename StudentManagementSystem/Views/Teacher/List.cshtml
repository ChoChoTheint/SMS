@model List<StudentManagementSystem.Models.ViewModels.TeacherViewModel>
@if (TempData["info"] != null)
{
    @if (TempData["info"].ToString().Contains("delete"))
    {
        <div class="alert alert-danger" role="alert">
            @TempData["info"]
        </div>
    }
    else
    {
        <div class="alert alert-success" role="alert">
            @TempData["info"]
        </div>
    }
}
<div class="container">
        
    
    <div class="row">
        
        <h1 class="h4 mb-3">Teacher List</h1>
        <div class="col-md-12">
            <div class="table-responsive">
                <table id="teacherTable" class="table table-bordred table-striped">

                    <thead>
                        <tr>
                            <th>Sr.</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Address</th>
                            <th>Phone</th>
                            <th>Gender</th>
                            <th>DOB</th>
                            <th>NRC</th>
                            <th>Position</th>
                            <th>Father Name</th>
                                @if (User.IsInRole("Admin"))
                                {
                                    <th>Action</th>
                                }
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int index = 1;
                        }

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@index</td>
                                <td>@item.Name</td>
                                <td>@item.Email</td>
                                <td>@item.Address</td>
                                <td>@item.Phone</td>
                                <td>@item.Gender</td>
                                <td>@item.DOB.ToString("yyyy-MM-dd")</td>
                                <td>@item.NRC</td>
                                <td>@item.Position</td>
                                <td>@item.FatherName</td>
                                @if (User.IsInRole("Admin"))
                                {
                                    <td class="dropdown">
                                        <button class="btn btn-white dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">Action</button>
                                        <ul class="dropdown-menu">
                                            <li class="dropdown-item">
                                                <a class="btn btn-primary btn-xs" data-title="Edit" href="/Teacher/edit?Id=@item.Id"><span class="glyphicon glyphicon-pencil"></span></a>
                                            </li>
                                            <li class="dropdown-item">
                                                <a class="btn btn-danger btn-xs" data-title="Delete" data-bs-toggle="offcanvas" data-bs-target="#delete"><span class="glyphicon glyphicon-trash"></span></a>
                                            </li>
                                        </ul>
                                    </td>

                                    <div class="offcanvas offcanvas-top mx-auto h-50" tabindex="-1" id="delete" aria-labelledby="offcanvasExampleLabel" style="width: 500px;">
                                        <div class="offcanvas-header">
                                            <h5 class="h2 text-warning offcanvas-title" id="offcanvasExampleLabel">Attention</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                                        </div>
                                        <div class="offcanvas-body">
                                            <p class="alert text-danger">Are You Sure Want To Delete The Data?</p>
                                            <div class="offcanvasbottom ">
                                                <a asp-controller="Teacher" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger w-100">Yes</a>
                                                <a type="button" class="btn btn-secondary w-100 my-3" data-bs-dismiss="offcanvas" aria-label="Close">No</a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </tr>
                            index++;
                        }


                    </tbody>

                </table>

            </div>

        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
        $("#teacherTable").DataTable();
    });
</script>

