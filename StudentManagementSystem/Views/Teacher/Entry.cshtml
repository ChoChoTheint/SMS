@model StudentManagementSystem.Models.ViewModels.TeacherViewModel
<div class="container w-50 mx-auto my-3 p-5 border-start border-end border-bottom rounded-start rounded-end shadow-sm" style="border-top: 12px solid #699BF7">
    <div class="d-flex justify-content-center align-items-center mb-4">
        <div class="me-3">
            <i class="fa-solid fa-book-open fa-2xl" style="color: #699BF7"></i>
        </div>
        <div class="text-center">
            <span class="mate-sc text-uppercase fw-bold">Leadership</span>
            <h1 class="h5 brand-space">Excellence</h1>
        </div>
    </div>
    <h1 class="h4 mb-3 text-center">Teacher Entry Form</h1>
    <form asp-controller="Teacher" asp-action="Entry" method="post" enctype="multipart/form-data">
        <input asp-for="Id" value="@ViewBag.Id" hidden />
        <input asp-for="AspNetUsersId" value="@ViewBag.AspUserId" hidden />
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" class="form-control" placeholder="enter name..." />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" placeholder="enter email..." />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Address" class="form-label">Address</label>
            <textarea asp-for="Address" class="form-control" rows="6" cols="6"></textarea>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Phone" class="form-label">Phone</label>
            <input asp-for="Phone" class="form-control" placeholder="enter phone..." />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <label for="" class="form-label">Gender</label>
        <div class="mb-3">
            <div class="d-flex">

                <div class="form-check me-3">
                    <input type="radio" class="form-check-input" asp-for="Gender" id="male" value="Male">
                    <label for="male" class="form-check-label">Male</label>
                </div>
                <div class="form-check me-3">
                    <input type="radio" class="form-check-input" asp-for="Gender" id="female" value="Female">
                    <label for="female" class="form-check-label">Female</label>
                </div>
                <div class="form-check me-3">
                    <input type="radio" class="form-check-input" asp-for="Gender" id="other" value="Other">
                    <label for="other" class="form-check-label">Other</label>
                </div>
            </div>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DOB" class="form-label">Date Of Birth</label>
            <input asp-for="DOB" class="form-control" placeholder="enter date of birth..." />
            <span asp-validation-for="DOB" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="NRC" class="form-label">NRC</label>
            <input asp-for="NRC" class="form-control" placeholder="enter nrc..." />
            <span asp-validation-for="NRC" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Position" class="form-label">Position</label>
            <input asp-for="Position" class="form-control" placeholder="enter position..." />
            <span asp-validation-for="Position" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="FatherName" class="form-label">Father Name</label>
            <input asp-for="FatherName" class="form-control" placeholder="enter father's..." />
            <span asp-validation-for="FatherName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <button class="btn btn-primary text-white" style="border-radius: 10px 0 10px 0;">Submit</button>
            <button class="btn btn-secondary text-white" style="border-radius: 10px 0 10px 0;" type="reset">Cancel</button>
        </div>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}