<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script src="http://getbootstrap.com/dist/js/bootstrap.min.js"></script>
@model IList<ExamViewModel>
<div class="">
    <div class="row">


        <div class="col-md-12">
            <div class="table-responsive">
                <table id="examTable" class="table table-bordred table-striped table-dark">

                    <thead>
                    <th>ExamName</th>
                    <th>ExamDate</th>
                    <th>Edit</th>
                    <th>Delete</th>
                    </thead>
                    <tbody>
                        @{
                            var index = 1;
                        }
                        @foreach(var list in Model)
                        {
                            <tr>
                                <td>@list.Name</td>
                                <td>@list.ExamDate.ToString("dd-MM-yyyy")</td>
                                <td><p data-placement="top" data-toggle="tooltip" title="Edit"><a class="btn btn-primary btn-xs" data-title="Edit" href="/exam/edit?Id=@list.Id"><span class="glyphicon glyphicon-pencil"></span></a></p></td>
                                <td>
                                    <p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" data-title="Delete" data-bs-toggle="offcanvas" data-bs-target="#delete"><span class="glyphicon glyphicon-trash"></span></button></p>

                                    <div class="offcanvas offcanvas-top mx-auto h-50" tabindex="-1" id="delete" aria-labelledby="offcanvasExampleLabel" style="width: 500px;">
                                        <div class="offcanvas-header">
                                            <h5 class="h3 text-warning offcanvas-title" id="offcanvasExampleLabel">Attention</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                                        </div>
                                        <p class="alert text-danger">Are You Sure Want To Delete The Data?</p>
                                        <div class="offcanvasbottom ">
                                            <a asp-controller="Exam" asp-action="Delete" asp-route-id="@list.Id" class="btn btn-danger w-100">Delete</a>
                                            <button type="button" class="btn btn-secondary w-100 my-3" data-bs-dismiss="offcanvas" aria-label="Close">No</button>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                            


                    </tbody>

                </table>

            </div>

        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
        $("#examTable").DataTable();
    });
</script>

