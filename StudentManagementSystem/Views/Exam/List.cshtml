@model IList<ExamViewModel>
@if (TempData["info"] != null)
{
    @if (TempData["info"].ToString().Contains("delete"))
    {
        <div class="alert alert-danger" role="alert">
            @TempData["info"]
        </div>
    }
    else
    {
        <div class="alert alert-success" role="alert">
            @TempData["info"]
        </div>
    }
}
<div class="container">
    @if (User.IsInRole("Admin") || User.IsInRole("Teacher") || User.Identity.IsAuthenticated)
    {
        <h1 class="h3 fw-bold">Exam: </h1>
        <div class="row mt-5 border-bottom">
            @foreach (var detail in Model)
            {

                <div class="col-lg-6 mb-5">
                    <div class="card">
                        <div class="card-body">
                            <h1 class="h3 pb-2 border-bottom border-danger"><span class="fw-bold">Exam Name: </span>@detail.Name</h1>
                            <div class=" gap-4 border-bottom border-danger pb-3">
                                <p class="card-text"><span class="fw-bold">Exam Date: </span>@detail.ExamDate.ToString("dd-MM-yyyy")</p>
                                
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>

    }

    @if (User.IsInRole("Admin"))
    {
        
        <div class="row">

            <h1 class="h4 mb-3">Exam List</h1>
            <div class="col-md-12">
                <div class="table-responsive">
                    <table id="examTable" class="table table-bordred table-striped">

                        <thead>
                        <th>ExamName</th>
                        <th>ExamDate</th>
                            @if (User.IsInRole("Admin"))
                            {
                                <th>Action</th>
                            }
                        </thead>
                        <tbody>
                            @{
                                var index = 1;
                            }
                            @foreach(var list in Model)
                            {
                                <tr>
                                    <td>@list.Name</td>
                                    <td>@list.ExamDate.ToString("dd-MM-yyyy")</td>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <td class="dropdown">
                                            <button class="btn btn-white dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">Action</button>
                                            <ul class="dropdown-menu">
                                                <li class="dropdown-item">
                                                    <a class="btn btn-primary btn-xs" data-title="Edit" href="/exam/edit?Id=@list.Id"><span class="glyphicon glyphicon-pencil"></span></a>
                                                </li>
                                                <li class="dropdown-item">
                                                    <a class="btn btn-danger btn-xs" data-title="Delete" data-bs-toggle="offcanvas" data-bs-target="#delete"><span class="glyphicon glyphicon-trash"></span></a>
                                                </li>
                                            </ul>
                                        </td>

                                        <div class="offcanvas offcanvas-top mx-auto h-50" tabindex="-1" id="delete" aria-labelledby="offcanvasExampleLabel" style="width: 500px;">
                                            <div class="offcanvas-header">
                                                <h5 class="h2 text-warning offcanvas-title" id="offcanvasExampleLabel">Attention</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                                            </div>
                                            <div class="offcanvas-body">
                                                <p class="alert text-danger">Are You Sure Want To Delete The Data?</p>
                                                <div class="offcanvasbottom ">
                                                    <a asp-controller="Exam" asp-action="Delete" asp-route-id="@list.Id" class="btn btn-danger w-100">Yes</a>
                                                    <a type="button" class="btn btn-secondary w-100 my-3" data-bs-dismiss="offcanvas" aria-label="Close">No</a>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </tr>
                            }
                            


                        </tbody>

                    </table>

                </div>

            </div>
        </div>
    }
</div>


<script>
    $(document).ready(function () {
        $("#examTable").DataTable();
    });
</script>

