@model IList<StudentManagementSystem.Models.ViewModels.StudentViewModel>
@if (TempData["info"] != null)
{
    @if (TempData["info"].ToString().Contains("delete"))
    {
        <div class="alert alert-danger mt-3" role="alert">
            @TempData["info"]
        </div>
    }
    else
    {
        <div class="alert alert-success mt-3" role="alert">
            @TempData["info"]
        </div>
    }
}


<div class="container">
    @if (User.IsInRole("Admin")||User.IsInRole("Teacher"))
    {
        <h1 class="h3 fw-bold">Student: </h1>
        <div class="row mt-5 border-bottom">
            @foreach (var detail in Model)
            {

                <div class="col-lg-4 mb-5">
                    <div class="card">
                        <div class="card-body">
                            <h1 class="h4 pb-2 border-bottom border-danger"><span class="fw-bold">Name: </span>  @detail.Name</h1>
                            <div class="gap-4 border-bottom border-danger pb-3">
                                <p class="card-text"><span class="fw-bold">Batch: </span>@detail.BatchId</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
           
        </div>
    }
    

    @if (User.IsInRole("Admin"))
    {
        
        <div class="row">
        
            <h1 class="h4 mb-3">Student List</h1>
            <div class="col-md-12">
                <div class="table-responsive">
                    <table id="adminTable" class="table table-bordred table-striped">

                        <thead>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th>Email</th>
                        <th>Address</th>
                        <th>Phone</th>
                        <th>DOB</th>
                        <th>NRC</th>
                        <th>Gender</th>
                        <th>Father Name</th>
                        <th>Batch</th>
                            @if (User.IsInRole("Admin"))
                            {
                
                                <th>Action</th>
                            }
                        </thead>
                        <tbody>
                            @{
                                int index = 1;
                            }
                            @if(!User.IsInRole("Admin")&&User.IsInRole("Teacher")){

                                <span class="text-warning">please today's attendance is required!</span>
                            }

                            @foreach (var item in Model)
                            {   
                                <tr>
                                    <td>@index</td>
                                    <td>@item.Name</td>
                                    <td>@item.Email</td>
                                    <td>@item.Address</td>
                                    <td>@item.Phone</td>
                                    <td>@item.DOB.ToString("dd-MM-yyyy")</td>
                                    <td>@item.NRC</td>
                                    <td>@item.Gender</td>
                                    <td>@item.FatherName</td>
                                    <td>@item.BatchId</td>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <td class="dropdown">
                                            <button class="btn btn-white dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">Action</button>
                                            <ul class="dropdown-menu">
                                                <li class="dropdown-item">
                                                    <a class="btn btn-primary btn-xs" data-title="Edit" href="/student/edit?Id=@item.Id"><span class="glyphicon glyphicon-pencil"></span></a>
                                                </li>
                                                <li class="dropdown-item">
                                                    <a class="btn btn-danger btn-xs" data-title="Delete" data-bs-toggle="offcanvas" data-bs-target="#delete"><span class="glyphicon glyphicon-trash"></span></a>
                                                </li>
                                            </ul>
                                        </td>

                                        <div class="offcanvas offcanvas-top mx-auto h-50" tabindex="-1" id="delete" aria-labelledby="offcanvasExampleLabel" style="width: 500px;">
                                            <div class="offcanvas-header">
                                                <h5 class="h2 text-warning offcanvas-title" id="offcanvasExampleLabel">Attention</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                                            </div>
                                            <div class="offcanvas-body">
                                                <p class="alert text-danger">Are You Sure Want To Delete The Data?</p>
                                                <div class="offcanvasbottom ">
                                                    <a asp-controller="Student" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger w-100">Yes</a>
                                                    <a type="button" class="btn btn-secondary w-100 my-3" data-bs-dismiss="offcanvas" aria-label="Close">No</a>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </tr>
                                index++;
                            }


                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    }
</div>




