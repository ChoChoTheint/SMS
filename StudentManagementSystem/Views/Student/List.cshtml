@model IList<StudentManagementSystem.Models.ViewModels.StudentViewModel>
@if (TempData["info"] != null)
{
    @if (TempData["info"].ToString().Contains("delete"))
    {
        <div class="alert alert-danger mt-3" role="alert">
            @TempData["info"]
        </div>
    }
    else
    {
        <div class="alert alert-success mt-3" role="alert">
            @TempData["info"]
        </div>
    }
}


<div class="container">

    @if (User.IsInRole("Admin"))
    {
        
        <div class="row">
        
            <h1 class="h4 mb-3">Student List</h1>
            <div class="col-md-12">
                <div class="table-responsive">
                    <table id="adminTable" class="table table-bordred table-striped">

                        <thead>
                            <th scope="col">ID</th>
                            <th scope="col">Name</th>
                            <th>Email</th>
                            <th>Address</th>
                            <th>Phone</th>
                            <th>DOB</th>
                            <th>NRC</th>
                            <th>Gender</th>
                            <th>Father Name</th>
                                @if (User.IsInRole("Admin"))
                                {
                
                                    <th>Action</th>
                                }
                        </thead>
                        <tbody>
                            @{
                                int index = 1;
                            }
                            @if(!User.IsInRole("Admin")&&User.IsInRole("Teacher")){

                                <span class="text-warning">please today's attendance is required!</span>
                            }

                            @foreach (var item in Model)
                            {   
                                <tr>
                                    <td>@index</td>
                                    <td>@item.Name</td>
                                    <td>@item.Email</td>
                                    <td>@item.Address</td>
                                    <td>@item.Phone</td>
                                    <td>@item.DOB.ToString("dd-MM-yyyy")</td>
                                    <td>@item.NRC</td>
                                    <td>@item.Gender</td>
                                    <td>@item.FatherName</td>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <td>
                                            <div class="dropdown">
                                                <button class="btn btn-white dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">Action</button>
                                                    <ul class="dropdown-menu">

                                                        <li>
                                                            <a type="button" class="dropdown-item btn text-info btn-xs mb-2" href="/student/edit?Id=@item.Id">
                                                                <i class="fa-regular fa-pen-to-square"></i> Edit
                                                            </a>
                                                        </li>
                                                        <li class="">
                                                            <a type="button" class="dropdown-item btn text-danger btn-xs " asp-controller="Student" asp-action="Delete" asp-route-Id="@item.Id" onclick="return confirm('Are you sure want to delete the record?')">
                                                                <i class="fa-regular fa-trash-can"></i> Delete
                                                            </a>
                                                        </li>
                                                    </ul>
                                            </div>
                                        </td>
                                    }
                                </tr>
                                index++;
                            }


                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    }
</div>




