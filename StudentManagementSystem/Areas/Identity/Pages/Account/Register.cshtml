<section class="">
    <div class="container py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-100">
            <div class="col-md-8 col-lg-7 col-xl-6">
                <img src="~/images/sign-up-form.svg"
                     class="img-fluid" alt="Phone image">
            </div>
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <h1 class="my-5">@ViewData["Title"]</h1>
                <form id="account" method="post">
                    <!-- Email input -->
                    <div class="mb-5">
                        <div data-mdb-input-init class="form-outline mb-1">
                            <input type="email" asp-for="Input.Email" class="form-control form-control-lg" />
                            <label class="form-label" asp-for="Input.Email">Email address</label>
                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <!-- Password input -->
                    <div class="mb-5">
                        <div data-mdb-input-init class="form-outline mb-1">
                            <input type="password" asp-for="Input.Password" class="form-control form-control-lg" />
                            <label class="form-label" asp-for="Input.Password">Password</label>
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <!-- Confirm Password input -->
                    <div class="mb-5">
                        <div data-mdb-input-init class="form-outline mb-1">
                            <input type="password" asp-for="Input.ConfirmPassword" class="form-control form-control-lg" />
                            <label class="form-label" asp-for="Input.ConfirmPassword">Password</label>
                        </div>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <!-- Submit button -->
                    <button type="submit"
                            class="btn btn-primary btn-lg btn-block" id="registerSubmit">
                        Register
                    </button>
                    <p class="small fw-bold mt-2 pt-1 mb-0">
                        Already have an account? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="link-danger">Login</a>
                    </p>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
